<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CheckList</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        /* Center the entire content */
        body{
            background-image: url('/images/bg.jpg'); 
            background-size: cover; 
            background-position: center; 
            background-attachment: fixed; 
            height: 100vh;
            margin: 0;
        }
        .topnav {
        background-color: #333;
        overflow: hidden;
        }

        /* Style the links inside the navigation bar */
        .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
        }

        /* Change the color of links on hover */
        .topnav a:hover {
        background-color: #ddd;
        color: black;
        }

        /* Add a color to the active/current link */
        .topnav a.active {
        background-color: #04AA6D;
        color: white;
        }
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }


        .form-container {
            background-color: #c3bff8;
            padding: 20px;
            margin-top: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
            border:black;
            width: 300px;
            justify-content: center;
        }

        .add-button {
            background-color: #ff7b7b;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            border-radius: 10px;
            
        }

        table {
            width: 100%;
            max-width: 800px;
            border-collapse: collapse;
            background-color: rgb(249, 197, 167);
        }

        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        /* Center text and set a width for the table */
        h2 {
            text-align: center;
        }
        p{
            color: white;
        }
    </style>
</head>
<body>
    <div class="topnav">
        <a class="active" href="/">Log out</a>
      </div>
    <div class="container">
    <div class="form-container">
        <h2>New Task</h2>
        <hr>
        <form action="/list" method="POST">
            <!-- User ID (hidden if itâ€™s determined on the backend) -->
            <input type="hidden" name="user_id" value="<%= user_id.user_id %>">
            <label>Title:</label><br>
            <input type="text" name="title" required><br>
            <br>
            <label>Description:</label><br>
            <textarea name="description"></textarea><br>
            <br>
            <button class="add-button" type="submit">Add</button>
        </form>
    </div>

    <h2>To Do</h2>
<% if (tasks.length === 0) { %>
    <p>No tasks available. Please add a task.</p>
<% } else { %>
    <table>
        <tr>
            <th>Task ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Delete</th>
        </tr>
        <% tasks.forEach(task => { %>
            <tr>
                <td><%= task.task_id %></td>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
                <td>
                    <form action="/updateStatus/<%= task.task_id %>" method="POST">
                        <input type="checkbox" name="status" <%= task.status_id ? 'checked' : '' %> onchange="this.form.submit()">
                    </form>
                </td>
                <td>
                    <form action="/deleteTask/<%= task.task_id %>" method="POST">
                        <button type="submit"><i class="fa fa-trash-o" style="font-size:24px"></i></button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
<% } %>

</div>
</body>
</html>
